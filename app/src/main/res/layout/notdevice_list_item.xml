<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@drawable/selector_white_bg_clicked"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_darker"
                android:text="@string/inspect_fault_address"/>
            <TextView
                android:id="@+id/fault_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_darker"
                android:text="@string/inspect_fault_description"/>
            <TextView
                android:id="@+id/fault_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_darker"
                android:text="@string/inspect_fault_time"/>
            <TextView
                android:id="@+id/fault_commit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_darker"
                android:text="@string/inspect_fault_status"/>
            <TextView
                android:id="@+id/fault_deal_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>