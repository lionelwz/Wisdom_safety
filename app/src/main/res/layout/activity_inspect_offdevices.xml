<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.inspect.plain.DeviceInspectActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/device_type_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/device_icon_general_blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_darker"
                    android:text="@string/inspect_device_name"/>
                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_darker"
                    android:text="@string/inspect_device_type"/>
                <TextView
                    android:id="@+id/device_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_darker"
                    android:text="@string/inspect_device_building"/>
                <TextView
                    android:id="@+id/device_building"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_darker"
                    android:text="@string/inspect_device_floor"/>
                <TextView
                    android:id="@+id/device_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备1"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View android:layout_height="1dp" android:background="@color/colorGrayLight" android:layout_width="fill_parent"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="@dimen/text_size_xxl"
            android:text="设备当前状态："/>
        <RadioGroup android:id="@+id/device_state_group"
            android:contentDescription="设备当前状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/device_normal"
                android:text="正常"
                android:checked="true"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/device_fault"
                android:text="故障"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/device_breakdown_light"
                android:text="轻度损坏"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/device_breakdown_middle"
                android:text="中度损坏"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/device_breakdown_serious"
                android:text="严重损坏"></RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fault_area_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/desc_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述："/>
            <EditText
                android:id="@+id/fault_desc_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:minLines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:background="@drawable/shape_textarea"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cur_image_layout"
            android:visibility="gone"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/attach_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/attach_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_xl"
                    android:textColor="@color/dark_text_on_light_bg"
                    android:text="@string/inspect_plain_scene_image"/>
                <Button
                    android:id="@+id/upload_image_btn"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shap_button_blue_dp"
                    android:text="@string/inspect_plain_upload_image"/>
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/attach_title"
                android:layout_marginTop="5dp"
                android:id="@+id/image_recycler"
                app:layoutManager="@string/gridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/scene_image_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cur_video_layout"
            android:visibility="gone"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/attach_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/attach_tv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_xl"
                    android:textColor="@color/dark_text_on_light_bg"
                    android:text="@string/inspect_plain_scene_video"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/video_layout"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="38dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/video_image"
                    android:src="@drawable/icon_add_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_gravity="center"
                    android:id="@+id/video_play"
                    android:src="@drawable/icon_play"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </FrameLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/inspect_device_sure"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="@dimen/text_size_xxxl"
            android:background="@drawable/shap_button_blue"
            android:text="确  定"/>

    </LinearLayout>
</LinearLayout >
</ScrollView>